{
    "swagger": "2.0",
    "info": {
        "description": "This is the API documentation for the Multi-Tenant Messaging App.",
        "title": "Multi-Tenant Messaging App API",
        "termsOfService": "http://example.com/terms/",
        "contact": {
            "name": "API Support",
